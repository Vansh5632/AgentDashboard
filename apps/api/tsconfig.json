// apps/api/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2022",                // Compile to modern JavaScript
    "module": "commonjs",              // Use CommonJS for Node.js compatibility
    "moduleResolution": "node",        // Use Node.js style module resolution
    "baseUrl": "./",                   // Base directory for module resolution
    "outDir": "./dist",                // Where to output compiled JavaScript
    "esModuleInterop": true,           // Allows compatibility with different module types
    "forceConsistentCasingInFileNames": true,
    "strict": true,                    // Enable all strict type-checking options
    "skipLibCheck": true,              // Skip type checking of declaration files
    "resolveJsonModule": true,         // Allow importing JSON files
    "typeRoots": ["./types", "./node_modules/@types"]  // Include custom type definitions
  },
  "include": ["./**/*.ts", "./types/**/*.d.ts"],  // Which files to include
  "exclude": ["node_modules", "dist"]              // Which files to exclude
}